---
import CardForum from "../../components/CardForum.astro";
import Layout from "../../layouts/Layout.astro";
import ForumChat from "../../sections/forum/ForumChat";
import ListOfForums from "../../sections/forum/ListOfForums.astro";

export const prerender = false
const {id} = Astro.params
---

<Layout
  title="Ecologica Universidad Cooperativa de Colombia"
  description="Pagina principal de medicion ecologica de la Universidad Cooperativa de Colombia"
>
  <main class="p-8 bg-gray-100">
    
    <div class="absolute top-0 -z-10 h-full w-full bg-white">
      <div
        class="absolute bottom-auto left-auto right-0 top-0 lg:h-[800px] lg:w-[800px] lg:-translate-x-[0%] lg:translate-y-[0%] h-[500px] w-[500px] -translate-x-[50%] translate-y-[-20%] rounded-full bg-ecologica-secondary opacity-10 blur-[80px] -z-20"
      >
      </div>
    </div>
    <div class="text-left">
      <h1 class="text-2xl font-bold lg:text-4xl">
        Foros de <span
          class="bg-gradient-to-r from-ecologica-primary to-ecologica-secondary text-transparent bg-clip-text"
          >ecologia</span
        >
      </h1>
      <p class="mt-5 text-sm lg:text-lg text-gray-700 max-w-[500px]">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. <span
          class="bg-gradient-to-r from-ecologica-primary to-ecologica-secondary text-transparent bg-clip-text font-bold"
          >reciclaje</span
        > Libero ipsum consequuntur,
      </p>
    </div>
    <div class="flex gap-6">
      <ListOfForums />
      <ForumChat
        client:load
        title={id ?? ""}
        msgs={[
          {
            content:
              "Hola que mas este es el mejor foro de la ucc. Es una chimba esta Es una chimba esta Es una chimba esta Es una chimba esta Es una chimba esta",
            userName: "Paco Senior",
            self: false,
            id: "0",
          },
          {
            content: "Wao esta pagina es increible",
            userName: "Maria senior",
            self: true,
            id: "1",
          },
        ]}
        }
      />
    </div>
  </main>
</Layout>
<!-- userID: string, userName: string, id: string, content: string, timeStamp: Date, foroId:
string, self: boolean -->
